<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HybridiProjekti.Views.AboutPage"
             Title="Tietoja">
    <VerticalStackLayout Padding="20">
        
        <Label Text="Ostoslista-sovellus"
               FontSize="24"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center"
               Style="{StaticResource MyLabelStyle}" />

        
        <BoxView HeightRequest="10"
                 BackgroundColor="Transparent"/>

        
        <Label Text="Tämän sovelluksen on kehittänyt Tessa Helenius. Sovellus auttaa sinua hallitsemaan ostoslistoja kätevästi sovelluksen kautta. Se toimii myös muistilistana jos haluat tallentaa sovellukseen kuvan jostain tuotteesta, jonka haluat mahdollisesti ostaa myöhemmin."
               FontSize="16"
               HorizontalTextAlignment="Center" />

        
        <BoxView HeightRequest="20"
                 BackgroundColor="Transparent"/>

        
        <Button Text="Takaisin"
                Style="{StaticResource MyButtonStyle}"
                Clicked="BackButton_Clicked"/>
    </VerticalStackLayout>


</ContentPage>